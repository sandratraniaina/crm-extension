<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= leadExpenses.lead.name %> Expenses
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen">
    <div class="container mx-auto p-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">Expenses for <%= leadExpenses.lead.name %>
        </h1>
        <table class="w-full bg-white rounded-lg shadow-lg">
            <thead>
                <tr class="bg-gray-200">
                    <th class="p-3 text-left">ID</th>
                    <th class="p-3 text-left">Amount ($)</th>
                    <th class="p-3 text-left">Description</th>
                    <th class="p-3 text-left">Date</th>
                    <th class="p-3 text-left">Lead ID</th>
                    <th class="p-3 text-left">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% leadExpenses.expenses.forEach(exp=> { %>
                    <tr id="row-<%= exp.id %>">
                        <td class="p-3">
                            <%= exp.id %>
                        </td>
                        <td class="p-3">
                            <%= exp.amount %>
                        </td>
                        <td class="p-3">
                            <%= exp.description %>
                        </td>
                        <td class="p-3">
                            <%= exp.expenseDate %>
                        </td>
                        <td class="p-3">
                            <%= exp.leadId || (leadId || 'Multiple' ) %>
                        </td>
                        <td class="p-3">
                            <button onclick="toggleEditForm('form-<%= exp.id %>', 'row-<%= exp.id %>')"
                                class="text-blue-600 hover:underline">Edit</button>
                            <form action="/leads/<%= exp.leadId || leadId %>/expenses/<%= exp.id %>/delete"
                                method="POST" class="inline">
                                <button type="submit" class="text-red-600 hover:underline">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <tr id="form-<%= exp.id %>" class="hidden">
                        <td colspan="6" class="p-3">
                            <form action="/leads/<%= exp.leadId || leadId %>/expenses/<%= exp.id %>/update"
                                method="POST" class="space-y-4">
                                <div>
                                    <label for="amount-<%= exp.id %>" class="block text-gray-700">Amount ($)</label>
                                    <input type="number" step="0.01" id="amount-<%= exp.id %>" name="amount"
                                        value="<%= exp.amount %>" class="w-full p-2 border border-gray-300 rounded-lg"
                                        required>
                                </div>
                                <div>
                                    <label for="description-<%= exp.id %>"
                                        class="block text-gray-700">Description</label>
                                    <input type="text" id="description-<%= exp.id %>" name="description"
                                        value="<%= exp.description %>"
                                        class="w-full p-2 border border-gray-300 rounded-lg">
                                </div>
                                <div>
                                    <label for="expenseDate-<%= exp.id %>" class="block text-gray-700">Expense
                                        Date</label>
                                    <input type="date" id="expenseDate-<%= exp.id %>" name="expenseDate"
                                        value="<%= exp.expenseDate %>"
                                        class="w-full p-2 border border-gray-300 rounded-lg" required>
                                </div>
                                <div class="flex space-x-2">
                                    <button type="submit"
                                        class="bg-blue-600 text-white p-2 rounded-lg hover:bg-blue-700">Update</button>
                                    <button type="button"
                                        onclick="toggleEditForm('form-<%= exp.id %>', 'row-<%= exp.id %>')"
                                        class="bg-gray-600 text-white p-2 rounded-lg hover:bg-gray-700">Cancel</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <a href="/" class="mt-4 inline-block text-blue-600 hover:underline">Back to Dashboard</a>
    </div>

    <script>
        function toggleEditForm(formId, rowId) {
            const form = document.getElementById(formId);
            const row = document.getElementById(rowId);
            form.classList.toggle('hidden');
            row.classList.toggle('hidden');
        }
    </script>
</body>

</html>