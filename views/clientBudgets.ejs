<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= clientBudgets.customer.name %> Budgets
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen">
    <div class="container mx-auto p-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">Budgets for <%= clientBudgets.customer.name %>
        </h1>
        <table class="w-full bg-white rounded-lg shadow-lg">
            <thead>
                <tr class="bg-gray-200">
                    <th class="p-3 text-left">ID</th>
                    <th class="p-3 text-left">Amount ($)</th>
                    <th class="p-3 text-left">Description</th>
                    <th class="p-3 text-left">Created At</th>
                    <th class="p-3 text-left">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% clientBudgets.budgets.forEach(budget=> { %>
                    <tr id="row-<%= budget.id %>">
                        <td class="p-3">
                            <%= budget.id %>
                        </td>
                        <td class="p-3">
                            <%= budget.amount %>
                        </td>
                        <td class="p-3">
                            <%= budget.description %>
                        </td>
                        <td class="p-3">
                            <%= budget.createdAt %>
                        </td>
                        <td class="p-3">
                            <button onclick="toggleEditForm('form-<%= budget.id %>', 'row-<%= budget.id %>')"
                                class="text-blue-600 hover:underline">Edit</button>
                            <form action="/clients/<%= clientId %>/budget/<%= budget.id %>/delete" method="POST"
                                class="inline">
                                <button type="submit" class="text-red-600 hover:underline">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <tr id="form-<%= budget.id %>" class="hidden">
                        <td colspan="5" class="p-3">
                            <form action="/clients/<%= clientId %>/budget/<%= budget.id %>/update" method="POST"
                                class="space-y-4">
                                <div>
                                    <label for="amount-<%= budget.id %>" class="block text-gray-700">Amount ($)</label>
                                    <input type="number" step="0.01" id="amount-<%= budget.id %>" name="amount"
                                        value="<%= budget.amount %>"
                                        class="w-full p-2 border border-gray-300 rounded-lg" required>
                                </div>
                                <div>
                                    <label for="description-<%= budget.id %>"
                                        class="block text-gray-700">Description</label>
                                    <input type="text" id="description-<%= budget.id %>" name="description"
                                        value="<%= budget.description %>"
                                        class="w-full p-2 border border-gray-300 rounded-lg">
                                </div>
                                <div class="flex space-x-2">
                                    <button type="submit"
                                        class="bg-blue-600 text-white p-2 rounded-lg hover:bg-blue-700">Update</button>
                                    <button type="button"
                                        onclick="toggleEditForm('form-<%= budget.id %>', 'row-<%= budget.id %>')"
                                        class="bg-gray-600 text-white p-2 rounded-lg hover:bg-gray-700">Cancel</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <a href="/" class="mt-4 inline-block text-blue-600 hover:underline">Back to Dashboard</a>
    </div>

    <script>
        function toggleEditForm(formId, rowId) {
            const form = document.getElementById(formId);
            const row = document.getElementById(rowId);
            form.classList.toggle('hidden');
            row.classList.toggle('hidden');
        }
    </script>
</body>

</html>