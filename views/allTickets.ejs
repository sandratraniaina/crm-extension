<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Tickets</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen">
    <div class="container mx-auto p-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">All Tickets</h1>
        <table class="w-full bg-white rounded-lg shadow-lg">
            <thead>
                <tr class="bg-gray-200">
                    <th class="p-3 text-left">ID</th>
                    <th class="p-3 text-left">Subject</th>
                    <th class="p-3 text-left">Description</th>
                    <th class="p-3 text-left">Status</th>
                    <th class="p-3 text-left">Priority</th>
                    <th class="p-3 text-left">Created At</th>
                    <th class="p-3 text-left">Total Expense ($)</th>
                    <th class="p-3 text-left">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% tickets.forEach(ticket=> { %>
                    <tr id="row-<%= ticket.ticketId %>">
                        <td class="p-3">
                            <%= ticket.ticketId %>
                        </td>
                        <td class="p-3">
                            <%= ticket.subject %>
                        </td>
                        <td class="p-3">
                            <%= ticket.description %>
                        </td>
                        <td class="p-3">
                            <%= ticket.status %>
                        </td>
                        <td class="p-3">
                            <%= ticket.priority %>
                        </td>
                        <td class="p-3">
                            <%= ticket.createdAt %>
                        </td>
                        <td class="p-3">
                            <%= ticket.totalExpense.toFixed(2) %>
                        </td>
                        <td class="p-3">
                            <form action="/tickets/<%= ticket.ticketId %>/delete" method="POST" class="inline">
                                <button type="submit" class="text-red-600 hover:underline">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <a href="/" class="mt-4 inline-block text-blue-600 hover:underline">Back to Dashboard</a>
    </div>
</body>

</html>