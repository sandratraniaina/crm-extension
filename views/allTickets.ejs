<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Tickets</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body class="bg-gray-50 min-h-screen flex">
    <%- include('partials/sidebar') %>

    <div class="flex-1 flex flex-col">
        <%- include('partials/header') %>

        <main class="flex-1 p-6 ml-64">
            <h1 class="text-2xl font-semibold text-gray-900 mb-6">All Tickets</h1>
            <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
                <table class="w-full">
                    <thead>
                        <tr class="bg-gray-50 border-b border-gray-200">
                            <th class="p-3 text-left text-sm font-medium text-gray-600">ID</th>
                            <th class="p-3 text-left text-sm font-medium text-gray-600">Subject</th>
                            <th class="p-3 text-left text-sm font-medium text-gray-600">Description</th>
                            <th class="p-3 text-left text-sm font-medium text-gray-600">Status</th>
                            <th class="p-3 text-left text-sm font-medium text-gray-600">Priority</th>
                            <th class="p-3 text-left text-sm font-medium text-gray-600">Created At</th>
                            <th class="p-3 text-left text-sm font-medium text-gray-600">Total Expense (Ar)</th>
                            <th class="p-3 text-left text-sm font-medium text-gray-600">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% tickets.forEach(ticket => { %>
                            <tr id="row-<%= ticket.ticketId %>" class="border-b border-gray-100 hover:bg-gray-50">
                                <td class="p-3 text-sm text-gray-900"><%= ticket.ticketId %></td>
                                <td class="p-3 text-sm text-gray-900"><%= ticket.subject %></td>
                                <td class="p-3 text-sm text-gray-900"><%= ticket.description %></td>
                                <td class="p-3 text-sm text-gray-900"><%= ticket.status %></td>
                                <td class="p-3 text-sm text-gray-900"><%= ticket.priority %></td>
                                <td class="p-3 text-sm text-gray-900"><%= ticket.createdAt %></td>
                                <td class="p-3 text-sm text-gray-900"><%= ticket.totalExpense.toFixed(2) %></td>
                                <td class="p-3">
                                    <form action="/tickets/<%= ticket.ticketId %>/delete" method="POST" class="inline">
                                        <button type="submit" class="text-red-500 hover:text-red-700 text-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</body>

</html>